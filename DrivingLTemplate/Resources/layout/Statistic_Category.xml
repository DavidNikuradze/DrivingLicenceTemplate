<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurway5"
    >



     <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           app:cardCornerRadius="10dp"
           app:cardElevation="5dp"
           app:cardBackgroundColor="#29302a"
           android:alpha="0.6"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
           
           
                   >
     
     
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               
               android:src="@drawable/wall1"
               android:id="@+id/Statistic_MapImg"
               android:scaleType="centerCrop"
               android:layout_gravity="center"
                    
               
           />

    </android.support.v7.widget.CardView>


     <FrameLayout
       android:layout_width="match_parent"
           android:layout_height="match_parent"
         android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
       
        >
   
      


        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            app:cardBackgroundColor="#330000"
            android:alpha="0.5"
            android:layout_marginRight="140dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="საათი"
                android:gravity="center"
                android:textSize="15sp"
                 android:id="@+id/Hour_TXT"
            />
       



        </android.support.v7.widget.CardView>


         <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            app:cardBackgroundColor="#330000"
            android:alpha="0.5"
            android:layout_marginRight="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="წუთი"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/Minute_TXT"
                
            />
       



        </android.support.v7.widget.CardView>



          <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            app:cardBackgroundColor="#330000"
            android:alpha="0.5"
            android:layout_marginLeft="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="თვე"
                android:gravity="center"
                android:textSize="15sp"
                 android:id="@+id/Month_TXT"
            />
       



        </android.support.v7.widget.CardView>


           <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            app:cardBackgroundColor="#330000"
            android:alpha="0.5"
            android:layout_marginLeft="135dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="დღე"
                android:gravity="center"
                android:textSize="15sp"
                 android:id="@+id/Day_TXT"
            />
       



        </android.support.v7.widget.CardView>



         <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            app:cardBackgroundColor="#330000"
            android:alpha="0.5"
            android:layout_marginRight="95dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="70dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="ონლაინში შენახვა"
                android:gravity="center"
                android:textSize="13sp"
                 android:id="@+id/OnlineSave_TXT"
            />
       



        </android.support.v7.widget.CardView>




         <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            app:cardBackgroundColor="#330000"
            android:alpha="0.5"
            android:layout_marginLeft="90dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="70dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="ონლაინ სტატისტიკის ნახვა"
                android:gravity="center"
                android:textSize="10sp"
                 android:id="@+id/OnlineStatistic_TXT"
            />
       



        </android.support.v7.widget.CardView>





         <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="85dp"
            app:cardBackgroundColor="#330000"
            android:alpha="0.7"
            
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="140dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="შეკითხვების ნახვა"
                android:gravity="center"
                android:textSize="13sp"
                 android:id="@+id/QuestionsWatch_TXT"
            />
       



        </android.support.v7.widget.CardView>



         <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            
            app:cardBackgroundColor="#330000"
            android:alpha="0.7"
            android:layout_marginLeft="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="140dp"
            
            >

            <TextView
            android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="სტატისტიკის წაშლა"
                android:gravity="center"
                android:textSize="13sp"
                 android:id="@+id/ClearStatistic_TXT"
            />
       



        </android.support.v7.widget.CardView>


    </FrameLayout>


</LinearLayout>
