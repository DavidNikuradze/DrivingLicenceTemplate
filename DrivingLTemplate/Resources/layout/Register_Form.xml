<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurway5"
    >



     <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    
        >
        <TextView
            android:layout_width="370sp"
            android:layout_height="30sp"
            android:text="---------------------რეგისტრაცია----------------------"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginBottom="280dp"
            android:alpha="0.3"
            
                
                
            
            />



        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="190dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#5b5b5b"
            android:alpha="0.6"
            
                >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="User Name"
                android:textStyle="italic"
                android:gravity="center"
                android:id="@+id/RegUserNameID"
                android:textColor="@android:color/black"
                android:alpha="0.8"
            
            
                 />

        </android.support.v7.widget.CardView>




         <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#5b5b5b"
            android:alpha="0.6"
            
                >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="Email Address"
                android:textStyle="italic"
                android:gravity="center"
                android:id="@+id/RegEmailID"
                android:textColor="@android:color/black"
                android:alpha="0.8"
            
            
        />

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#5b5b5b"
            android:alpha="0.6"
            
                >
            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="Password"
                android:id="@+id/PasswordRegID" />






        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#5b5b5b"
            android:alpha="0.6"
            
                >
            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="Password"
                android:id="@+id/PasswordRegRepeatID" />






        </android.support.v7.widget.CardView>

        



         <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#004703"
            android:alpha="0.7"
            
                >
            <Button
                android:text="შესვლა"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                android:id="@+id/RegisterBTN" />




        </android.support.v7.widget.CardView>




         





         <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="260dp"
            android:layout_marginRight="50dp"
           
            >



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/FacebookIconReg"
                android:src="@drawable/FBIcon3"
                android:background="@android:color/transparent"
                    
                    
                   />



        </LinearLayout>





         <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="50dp"
           
            >



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/TwitterIcon"
                android:src="@drawable/TwitterIcon"
                android:background="@android:color/transparent"
                    
                    
                   />



        </LinearLayout>


        <TextView
            android:layout_width="370sp"
            android:layout_height="30sp"
            android:text="-----------------ან დარეგისტრირდი-----------------"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:alpha="0.3"
            
                
                
            
            />



    </FrameLayout>


</LinearLayout>
